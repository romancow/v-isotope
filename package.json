{
	"name": "@romancow/v-masonry",
	"version": "1.2.2",
	"description": "Masonry cascading grid layout library as a Vue directive or component",
	"main": "build/index.js",
	"types": "types/index.d.ts",
	"files": [
		"build/",
		"types/",
		"component/",
		"directive/",
		"masonry-layout/"
	],
	"scripts": {
		"clean": "rimraf ./build/* ./types/*",
		"copy-def": "ncp ./src/masonry.d.ts ./types/masonry.d.ts",
		"prebuild": "npm run clean",
		"build": "tsc -p . --diagnostics --explainFiles",
		"prepare": "tsc -p .",
		"postprepare": "npm run copy-def"
	},
	"repository": "git://github.com/romancow/v-masonry.git",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"keywords": [
		"vue",
		"component",
		"directive",
		"masonry",
		"cascade",
		"grid",
		"layout"
	],
	"author": "Sean Wilson",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/romancow/v-masonry/issues"
	},
	"homepage": "https://github.com/romancow/v-masonry#readme",
	"dependencies": {
		"@types/masonry-layout": "file:masonry-layout",
		"masonry-layout": "^4.2.2"
	},
	"devDependencies": {
		"ncp": "^2.0.0",
		"rimraf": "^3.0.2",
		"typescript": "^4.5.5",
		"vue": "^2.6.14"
	},
	"peerDependencies": {
		"vue": "2"
	}
}
